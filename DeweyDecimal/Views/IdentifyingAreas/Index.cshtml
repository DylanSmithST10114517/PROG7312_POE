@model DeweyDecimal.Models.Quiz

<div class="container">
        <h1 class="mt-4">Welcome to the Dewey Decimal Quiz</h1>

        <div class="row mt-4">
            <div class="col-md-6">
                <h2>Questions</h2>
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            @Model.Questions[i]
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-6">
                <h2>Answers</h2>
                @for (int i = 0; i < Model.Answers.Count; i++)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            @Model.Answers[i]
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
